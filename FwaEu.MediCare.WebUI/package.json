{
	"name": "template",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite --host --open",
		"build": "vite build --mode production",
		"build-preprod": "set NODE_ENV=production && vite build --mode preproduction",
		"build-prod": "vite build --mode production",
		"preview-dist": "vite preview --host",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
		"browserslist": "npx browserslist",
		"browserslist-update": "npx browserslist --update-db",
		"build_devextreme_theme": "devextreme build",
		"test": "jest"
	},
	"dependencies": {
		"@azure/msal-browser": "2.28.1",
		"@fontsource/nunito": "4.5.10",
		"@fontsource/roboto": "4.5.8",
		"@fwaeu/fontawesome-pro": "file:./local_packages/fwaeu/fontawesome-pro",
		"@intlify/shared": "9.2.2",
		"@microsoft/signalr": "6.0.8",
		"@sentry/tracing": "7.10.0",
		"@sentry/vue": "7.10.0",
		"@vuepic/vue-datepicker": "3.4.5",
		"@vueuse/core": "9.1.0",
		"@vueuse/math": "9.1.0",
		"axios": "0.27.2",
		"devextreme": "22.1.4",
		"devextreme-aspnet-data-nojquery": "2.8.6",
		"devextreme-vue": "22.1.4",
		"jwt-decode": "3.1.2",
		"lodash": "4.17.21",
		"noty": "3.1.4",
		"nprogress": "0.2.0",
		"purecss": "2.1.0",
		"vue": "3.2.37",
		"vue-content-loader": "2.0.1",
		"vue-i18n": "9.2.2",
		"vue-router": "4.1.3",
		"vue-wait": "1.5.3",
		"vue-word-highlighter": "1.0.5"
	},
	"devDependencies": {
		"@babel/core": "7.18.10",
		"@babel/eslint-parser": "7.18.9",
		"@fwaeu/eslint-plugin-custom-rules": "file:./local_packages/fwaeu/eslint-plugin-custom-rules",
		"@fwaeu/vite-plugin-app-settings-json": "file:./local_packages/fwaeu/vite-plugin-app-settings-json",
		"@intlify/vite-plugin-vue-i18n": "6.0.1",
		"@types/node": "18.7.6",
		"@vitejs/plugin-vue": "3.0.3",
		"@vue/test-utils": "2.0.2",
		"babel-jest": "26.6.3",
		"devextreme-cli": "1.4.2",
		"devextreme-themebuilder": "22.1.4",
		"esbuild": "0.15.3",
		"eslint": "8.22.0",
		"eslint-plugin-jest": "26.1.1",
		"eslint-plugin-vue": "9.3.0",
		"jest": "26.6.3",
		"jest-editor-support": "30.1.0",
		"vite": "3.1.4",
		"vite-plugin-pwa": "^0.13.1",
		"vue-jest": "5.0.0-alpha.10"
	},
	"overrides": {
		"vue": "3.2.37"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"es2022": true,
			"browser": true
		},
		"plugins": [
			"jest",
			"@fwaeu/custom-rules"
		],
		"extends": [
			"plugin:vue/vue3-essential",
			"plugin:jest/recommended",
			"eslint:recommended"
		],
		"rules": {
			"@fwaeu/custom-rules/no-local-storage": "error",
			"no-prototype-builtins": "off",
			"no-useless-escape": "off",
			"no-mixed-spaces-and-tabs": "off",
			"no-debugger": "warn",
			"require-atomic-updates": "off",
			"vue/valid-v-for": "warn",
			"vue/require-v-for-key": "warn",
			"no-unused-vars": [
				"error",
				{
					"vars": "all",
					"args": "none",
					"ignoreRestSiblings": false
				}
			]
		},
		"settings": {
			"jest": {
				"version": 27
			}
		},
		"parserOptions": {
			"requireConfigFile": false,
			"parser": "@babel/eslint-parser"
		}
	},
	"browserslist": [
		"last 2 firefox versions",
		"last 2 chrome versions",
		"last 2 edge versions",
		"last 2 safari versions"
	],
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			".*\\.(vue)$": "vue-jest",
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest"
		},
		"collectCoverage": false
	}
}
